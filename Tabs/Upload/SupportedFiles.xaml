<Window x:Class="Ark.Tabs.Upload.SupportedFiles"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ark.Tabs.Upload"
        mc:Ignorable="d"
        FontSize="14" 
        Title="Поддерживаемые файлы" 
        Height="300" Width="363">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center"
                   TextWrapping="Wrap" 
                   Margin="3,3,3,3"
                   Grid.Row="0"
                   Text="   Данная программа может загрузить любой файл, но преобразовать в текст может только следующие типы файлов:"/>
        <TreeView Name="FilesTreeView"
                  Grid.Row="1" BorderBrush="{x:Null}" >            
        </TreeView>

    </Grid>
</Window>
